.header
  .emergency
    %label
      Emergency Mode:
      %strong.status OFF
    %button.btn.btn-em{data: {toggle:"modal", target:".switch-em"}} Switch ON
  %h1.logo City72

%nav.navbar
  %ul.nav.navbar-nav
    %li
      = link_to "City Info", cms_city_path
    %li
      = link_to "Connections", cms_connections_path
    %li
      = link_to "Supplies", cms_supplies_path
    %li
      = link_to "Stories", cms_stories_path
    %li
      = link_to "Plan", cms_plan_index_path
    %li
      = link_to "About", cms_about_index_path
    %li.user
      %a.dropdown-toggle{data: {toggle:"dropdown"}}
        %i.glyphicon.glyphicon-user
        User
        %b.caret
      %ul.dropdown-menu{role: "menu"}
        %li 
          %a{href: "#"} Change Password
        %li
          %a{href: "#"} Log Out
    %li.em-menu
      = link_to "Map & Updates", cms_map_index_path

.modal.switch-em.fade
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
        %h4.modal-title Switch Emergency Mode
      .modal-body
        %form{:role => "form"}
          .form-group
            %label{:for => "mode-headline"} Describe the Emergency Event in a line
            %input.form-control#mode-headline{:type => "text"}/
          .form-group
            %label{:for => "mode-description"} Now
            %p.help-block A short description of the Event
            %textarea.form-control#mode-description{:name => "mode-description", :cols => "90", :rows => "8"} 
      .modal-footer
        %button.btn.btn-primary{type: "button"} Switch to Emergency Mode
        %button.btn{"data-dismiss" => "modal", type: "button"} Cancel